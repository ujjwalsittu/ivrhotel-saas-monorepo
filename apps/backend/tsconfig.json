{
    "compilerOptions": {
        "target": "es2016",
        "module": "node16",
        "rootDir": "./src",
        "moduleResolution": "node16",
        "outDir": "./dist",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}